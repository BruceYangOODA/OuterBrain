<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvTopic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/CadetBlue"
            android:textSize="24dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_click_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="@integer/item_horizon_short"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tv_item_title"/>
        <EditText
            android:id="@+id/etSummary"
            android:layout_width="0dp"
            android:layout_weight="@integer/item_horizon_long"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="@integer/item_horizon_short"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tv_item_buy"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="@integer/item_horizon_long"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/etGrocery"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/btnSmartInput"
                android:layout_width="@dimen/text_view_click_width"
                android:layout_height="wrap_content"
                android:text="@string/btn_smart_input"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_click_height"
        android:orientation="horizontal">
        <TextView
            android:paddingTop="@dimen/text_view_padding_top_space"
            android:layout_width="0dp"
            android:layout_weight="@integer/item_horizon_short"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tv_shop_name"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_weight="@integer/item_horizon_long"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_click_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="@integer/item_horizon_short"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tv_item_date"/>
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_weight="@integer/item_horizon_long"
            android:layout_height="wrap_content"
            android:hint="@string/tv_hint_date_picker"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_click_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="@integer/item_horizon_short"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tv_item_time"/>
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_weight="@integer/item_horizon_long"
            android:layout_height="wrap_content"
            android:hint="@string/tv_hint_time_picker"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_click_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="@integer/item_horizon_short"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tv_item_notify"/>
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_weight="@integer/item_horizon_long"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/tv_not_notify"/>
            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/tv_target_day"/>
            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/tv_every_day"/>
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_click_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="@integer/item_horizon_short"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tv_item_ring"/>
        <TextView
            android:id="@+id/tvRing"
            android:layout_width="0dp"
            android:layout_weight="@integer/item_horizon_long"
            android:layout_height="wrap_content"
            android:hint="@string/tv_hint_ring"
            />
        <TextView
            android:id="@+id/tvUri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancel"/>
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/btn_delete"/>
        <Button
            android:id="@+id/btnEdit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


</LinearLayout>